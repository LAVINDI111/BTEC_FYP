# Use the official PostgreSQL image
FROM postgres:15

# Set environment variables
ENV POSTGRES_DB=db_of_acnsms
ENV POSTGRES_USER=acnsms_user
ENV POSTGRES_PASSWORD=acnsms_password

# Copy the SQL initialization script
COPY postgres_init.sql /docker-entrypoint-initdb.d/

# Expose PostgreSQL port
EXPOSE 5432

# The postgres image already has the correct CMD, so we don't need to specify it
